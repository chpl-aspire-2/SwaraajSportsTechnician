<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvPName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Silent Diesel Generator"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp"
                android:textStyle="normal" />


            <TextView
                android:id="@+id/tvAbout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Next Maintenance  11 jun 2022"
                android:textColor="@color/grey_60"
                android:textSize="@dimen/_10ssp"
                android:textStyle="normal" />


            <TextView
                android:id="@+id/tvLName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Silent Diesel Generator"
                android:textColor="@color/grey_60"
                android:textSize="@dimen/_10ssp" />


        </LinearLayout>

        <LinearLayout
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_width="@dimen/_54sdp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_corner_green_alpha"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/_3sdp">

            <TextView
                android:textStyle="bold"
                android:id="@+id/tv_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/green_500"
                android:textSize="@dimen/_14ssp" />

            <TextView
                android:id="@+id/tv_month"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/green_500"
                android:textSize="@dimen/_8ssp" />

            <TextView
                android:id="@+id/tv_year"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/green_500"
                android:textSize="@dimen/_8ssp" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:gravity="right|center_vertical"
        android:layout_gravity="right|center_vertical"
        android:layout_marginTop="@dimen/_6sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:paddingHorizontal="@dimen/_6sdp"
            android:background="@drawable/status_pending"
            android:id="@+id/tvCName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Silent Diesel Generator"
            android:textColor="@color/yellow_800"
            android:textSize="@dimen/_10ssp"/>

        <TextView
            android:id="@+id/tvComplete"
            android:layout_gravity="right|center_vertical"
            android:layout_margin="@dimen/_8sdp"
            android:textSize="@dimen/_10ssp"
            android:text="Mark Completed"
            android:textColor="@color/white"
            android:background="@drawable/rounded_square_primary"
            android:paddingVertical="@dimen/_4sdp"
            android:paddingHorizontal="@dimen/_12sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



    </LinearLayout>


</LinearLayout>